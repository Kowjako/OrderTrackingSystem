<Window x:Class="OrderTrackingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:contols="clr-namespace:OrderTrackingSystem.CustomControls.TimeLineBar"
        xmlns:local="clr-namespace:OrderTrackingSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <contols:TimeLineControl x:Name="tlControl" VerticalAlignment="Top" Margin="0,5,0,0" Height="200"/>
        <Border VerticalAlignment="Center" Height="5">
            <Border.Background>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Rectangle StrokeDashArray="0.2 0.6" Stroke="Black" StrokeThickness="5" Width="100" Height="5"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.Background>
        </Border>
        <Button Grid.Row="1" Content="Add state" Click="Button_Click"/>
    </Grid>
</Window>
