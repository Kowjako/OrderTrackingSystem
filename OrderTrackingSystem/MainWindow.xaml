<Window x:Class="OrderTrackingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:contols="clr-namespace:OrderTrackingSystem.CustomControls.TimeLineBar"
        xmlns:controlsX="clr-namespace:OrderTrackingSystem.CustomControls"
        xmlns:local="clr-namespace:OrderTrackingSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <contols:TimeLineControl x:Name="tlControl" VerticalAlignment="Top" Margin="0,5,0,0" Height="50"/>
        <StackPanel Orientation="Horizontal">
            <controlsX:PurchaseElement x:Name="elem" BoxSizeSelector="Small" Margin="5" Width="200" Height="350"/>
            <controlsX:PurchaseElement x:Name="elem1" BoxSizeSelector="Medium" Margin="5" Width="200" Height="350"/>
            <controlsX:PurchaseElement x:Name="elem2" BoxSizeSelector="Large" Margin="5" Width="200" Height="350"/>
        </StackPanel>
        
        <Button Grid.Row="1" Content="Add state" Click="Button_Click"/>
    </Grid>
</Window>
