<Window x:Class="OrderTrackingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:contols="clr-namespace:OrderTrackingSystem.CustomControls.TimeLineBar"
        xmlns:local="clr-namespace:OrderTrackingSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <contols:TimeLineControl x:Name="tlControl" Margin="0,5,0,0"/> 
        <Button Grid.Row="1" Content="Add state" Click="Button_Click"/>
    </Grid>
</Window>
