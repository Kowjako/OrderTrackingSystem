            <contols:TimeLineControl x:Name="tlControl" VerticalAlignment="Top" Margin="0,5,0,0" Height="100"/>
        
        
            <Button Grid.Row="1" Content="Add state" Click="Button_Click"/>
        </Grid> -->
    </Border>
</Window>
