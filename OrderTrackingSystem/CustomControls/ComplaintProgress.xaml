<UserControl x:Class="OrderTrackingSystem.Presentation.CustomControls.ComplaintProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderTrackingSystem.Presentation.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="440">
    <UserControl.Resources>
        <!-- Control template dla zaznaczonego checkbox-->
        <ControlTemplate x:Key="stateDone" TargetType="{x:Type CheckBox}">
            <Border Width="30"
                    Height="30"
                    Margin="5"
                    Background="{TemplateBinding BorderBrush}"
                    CornerRadius="10"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <Image Margin="5"
                       Source="../Images/complaintOK.png"/>
            </Border>
        </ControlTemplate>
        <!-- Control template dla odznaczonego checkbox-->
        <ControlTemplate x:Key="stateUndone" TargetType="{x:Type CheckBox}">
            <Border Width="30"
                    Height="30"
                    Margin="5"
                    Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1">
            </Border>
        </ControlTemplate>
        <!-- Styl dla zaznaczonego checkbox -->
        <Style x:Key="checked" TargetType="{x:Type CheckBox}">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="#1CB164"/>
                <Setter Property="Background" Value="#1CB164"/>
            </Style.Setters>
        </Style>
        <!-- Styl dla odznaczonego checkbox -->
        <Style x:Key="unchecked" TargetType="{x:Type CheckBox}">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="Background" Value="Snow"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="mainContainer" Grid.IsSharedSizeScope="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="X"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" SharedSizeGroup="X"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" SharedSizeGroup="X"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <CheckBox Template="{StaticResource stateDone}" 
                  Grid.Column="0" 
                  Style="{StaticResource checked}"
                  IsChecked="True">
        </CheckBox>
        <CheckBox Template="{StaticResource stateUndone}" 
                  Grid.Column="2"
                  Style="{StaticResource unchecked}"
                  BorderBrush="Gray"
                  IsChecked="True">

        </CheckBox>
        <CheckBox Template="{StaticResource stateUndone}" 
                  Grid.Column="4"
                  Style="{StaticResource unchecked}"
                  BorderBrush="Gray"
                  IsChecked="True">
        </CheckBox>
        <Line Stroke="#1CB164"
              Grid.Column="1"
              VerticalAlignment="Center"
              X1="0"
              X2="80"
              StrokeDashArray="2 2"/>
        <Line Stroke="SlateGray"
              Grid.Column="3"
              VerticalAlignment="Center"
              X1="0"
              X2="80"
              StrokeThickness="1"
              StrokeDashArray="2 2"/>
        <StackPanel Grid.Column="0"
                    Grid.Row="1">
            <TextBlock Margin="2"
                       Text="Założenie reklamacji"
                       FontSize="10"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Image Height="12" 
                       Margin="2"
                       Width="12" 
                       Source="../Images/clock.png"/>
                <TextBlock FontSize="7"
                           VerticalAlignment="Center"
                           Text="01-Czerwca-2022"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="2"
                    Grid.Row="1">
            <TextBlock Margin="2"
                       Text="Decyzja sprzedawcy"
                       FontSize="10"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Image Height="12" 
                       Margin="2"
                       Width="12" 
                       Source="../Images/clock.png"/>
                <TextBlock FontSize="7"
                           VerticalAlignment="Center"
                           Text="02-Czerwca-2022"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="4"
                    Grid.Row="1">
            <TextBlock Margin="2"
                       HorizontalAlignment="Center"
                       Text="Koniec reklamacji"
                       FontSize="10"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Image Height="12" 
                       Margin="2"
                       Width="12" 
                       Source="../Images/clock.png"/>
                <TextBlock FontSize="7"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="05-Czerwca-2022"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
