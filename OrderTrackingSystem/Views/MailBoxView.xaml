<UserControl x:Class="OrderTrackingSystem.Presentation.Views.MailBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="1"
                      Grid.Row="0"
                      Grid.RowSpan="4"
                      Width="3"
                      Background="Black"/>
        <Border Grid.Row="0" Background="DeepPink">
            <TextBlock Text="Skrzynka E-MAIL"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="17"
                       Foreground="Black"/>
        </Border>
        <DockPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="3"
                   Background="LightPink" LastChildFill="False">
            <GroupBox
                Header="Tworzenie wiadomości"
                Margin="5"
                DockPanel.Dock="Top"
                materialDesign:ColorZoneAssist.Mode="Custom"
                materialDesign:ColorZoneAssist.Background="Black"
                materialDesign:ColorZoneAssist.Foreground="White">
                <StackPanel>
                    <TextBox
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    Margin="5"
                    Height="40"
                    Padding="7,8,0,0"
                    FontSize="15"
                    materialDesign:HintAssist.Background="LightPink"
                    materialDesign:HintAssist.Hint="Temat"
                    />
                    <TextBox
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    Margin="5"
                    Height="40"
                    Padding="7,8,0,0"
                    FontSize="15"
                    materialDesign:HintAssist.Background="LightPink"
                    materialDesign:HintAssist.Hint="Odbiorca"
                    />
                    <TextBox
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    Margin="5"
                    Height="40"
                    Padding="7,8,0,0"
                    FontSize="15"
                    materialDesign:HintAssist.Background="LightPink"
                    materialDesign:HintAssist.Hint="Treść"
                    />
                </StackPanel>
            </GroupBox>
            <GroupBox
                Header="Powiązane zamówienie"
                Margin="5"
                DockPanel.Dock="Top"
                materialDesign:ColorZoneAssist.Mode="Custom"
                materialDesign:ColorZoneAssist.Background="Black"
                materialDesign:ColorZoneAssist.Foreground="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Height="50"
                           Width="50"
                           Grid.Column="0"
                           Source="../Images/mail.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <Rectangle Grid.Column="1" Margin="0,2,2,2" Height="2" Fill="Black"/>
                    <Button
                    Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                    Height="30"
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    Background="Green"
                    BorderBrush="Green"
                    Width="30">
                        <materialDesign:PackIcon
                        Kind="Plus"
                        Height="25"
                        Width="25" />
                    </Button>
                    <Rectangle Grid.Column="3" Margin="2,2,0,2" Height="2" Fill="Black"/>
                    <Image Height="50"
                           Width="50"
                           Grid.Column="4"
                           Source="../Images/order.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </GroupBox>
            <Button
                    DockPanel.Dock="Bottom"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Background="Maroon"
                    BorderBrush="Maroon"
                    Foreground="White"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="Wyślij wiadomość" />
            <Button
                    DockPanel.Dock="Bottom"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Background="Maroon"
                    BorderBrush="Maroon"
                    Foreground="White"
                    materialDesign:RippleAssist.Feedback="#DD000000"
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="Filtruj" />
        </DockPanel>
        <StackPanel Grid.Column="1"
                    Grid.RowSpan="4"
                    Grid.Row="0">
            <TextBlock Text="Wiadomości wysłane"
                       Foreground="Black"
                       FontSize="17"
                       Margin="10,10,10,5"
                       FontFamily="Arial"/>
            <DataGrid x:Name="elementGrid" Margin="0,0,5,0"/>
        </StackPanel>
        <DockPanel
                   LastChildFill="False"
                   Grid.Column="2"
                   Grid.Row="0"
                   Grid.RowSpan="4" Margin="1,0,0,0">
            <TextBlock
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                Text="Wiadomości odebrane"
                TextAlignment="Left"
                Foreground="Black"
                FontSize="17"
                Margin="10,10,10,5"
                FontFamily="Arial"/>
            <DataGrid DockPanel.Dock="Top"/>
        </DockPanel>       
    </Grid>
</UserControl>
